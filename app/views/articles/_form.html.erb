<div class="center">
	<div class="mylisttable">

		<%= form_for :article, url: articles_path do |f| %>

		<form>
  			<div class="form-group">
    			<input type="title" name="article[subject]"class="form-control" placeholder="My Subject">
    		</div>
  			<div class="form-group">  
    			<textarea type="text" name="article[target]" class="form-control" placeholder="My Target"></textarea>
  			</div>

  			<center>&larr;<%= f.submit "My Life", class: 'btn btn-default btn-sm' %>&rarr;</center>
		</form>

		<% end %>

	</div>
</div>